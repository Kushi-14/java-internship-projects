import java.util.HashMap;
import java.util.Scanner;

public class EmojijMoodResponder {
    public static void main(String[] args) {
        HashMap<String, String> moodMap = new HashMap<>();
        moodMap.put("happy", "ðŸ˜Š Stay smiling, the world needs your light!");
        moodMap.put("sad", "ðŸ˜¢ It's okay to feel down. Better days are coming.");
        moodMap.put("tired", "ðŸ˜´ Take a deep breath and rest when you can.");
        moodMap.put("angry", "ðŸ˜¡ Try to cool off, you're stronger than your anger.");
        moodMap.put("excited", "ðŸ¤© Your energy is contagious! Keep shining!");

        Scanner scanner = new Scanner(System.in);
        System.out.print("How are you feeling today? ");
        String userMood = scanner.nextLine().toLowerCase();

        if (moodMap.containsKey(userMood)) {
            System.out.println(moodMap.get(userMood));
        } else {
            System.out.println("ðŸ¤” Mood not recognized. Try moods like 'happy', 'tired', or 'sad'.");
        }

        scanner.close();
    }
}
